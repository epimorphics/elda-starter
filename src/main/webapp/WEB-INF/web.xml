<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC 
    '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN'
    'http://java.sun.com/dtd/web-app_2_3.dtd'>
<web-app> 

    <!-- -->
    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
   
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>DEBUG</param-value>
        </init-param>
        
    </filter>
    
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--  -->
    
  <servlet>
    <servlet-name>jersey-for-elda</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
       
    <init-param>
        <param-name>com.sun.jersey.config.property.packages</param-name>
        <param-value>com.epimorphics.lda.restlets</param-value>
    </init-param>
    
    <init-param>
        <param-name>com.epimorphics.api.initialSpecFile</param-name>
        <param-value>
            /etc/elda/conf.d/{APP}/*.ttl
        </param-value>
    </init-param>
  </servlet>
  
  <!-- ==================================================================== -->

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/index.html</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/lda-assets/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
     <servlet-name>jersey-for-elda</servlet-name>
     <url-pattern>/*</url-pattern> 
  </servlet-mapping>  

  <!-- ==================================================================== -->

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
</web-app>
